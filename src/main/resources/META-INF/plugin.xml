<idea-plugin>
    <id>com.andreaepifani.fontawesome-preview</id>
    <name>Fontawesome preview</name>
    <vendor email="andyepx@gmail.com" url="http://andreaepifani.com">Andrea Epifani</vendor>

    <description><![CDATA[
    Fontawesome preview
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <codeInsight.lineMarkerProvider language="HTML"
                                        implementationClass="com.andreaepifani.fontawesome.SimpleLineMarkerProvider"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>